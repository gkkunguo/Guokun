<?xml version="1.0" encoding="utf-8"?>
<com.example.helenkellercompute.guokun.phoneVideo.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:layout_height="55dp">
    <ImageView
        android:layout_marginLeft="8dp"
        android:src="@drawable/logo"
        android:layout_width="70dp"
        android:layout_height="39dp" />
    <TextView
        android:id="@+id/tv_search"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@drawable/tv_search_drawb_select"
        android:background="@drawable/tv_bg_drawb_select"
        android:textColor="@drawable/tv_tc_drawb_select"
        android:text="全网搜索"
        android:clickable="true"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_game"
            android:drawableLeft="@drawable/game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignRight="@+id/tv_game"
            android:background="@drawable/dot"
            android:layout_width="6dp"
            android:layout_height="6dp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_record"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.example.helenkellercompute.guokun.phoneVideo.view.TitleBar>